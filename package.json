{
  "name": "otagon",
  "private": true,
  "version": "1.0.0",
  "description": "AI-powered gaming companion providing spoiler-free hints, walkthroughs, and progress tracking for all your favorite games",
  "keywords": [
    "gaming",
    "ai",
    "assistant",
    "gaming-companion",
    "game-guide",
    "spoiler-free",
    "hints",
    "walkthrough",
    "pwa"
  ],
  "author": "Otagon",
  "license": "UNLICENSED",
  "homepage": "https://otagon.app",
  "repository": {
    "type": "git",
    "url": "https://github.com/readmet3xt/Otagon"
  },
  "type": "module",
  "scripts": {
    "dev": "vite",
    "generate-icons": "node scripts/generate-icons.js",
    "generate-manifest": "node scripts/generate-manifest.js",
    "prebuild": "npm run generate-manifest",
    "build": "vite build && node scripts/fix-base-paths.js && node scripts/copy-public-assets.js",
    "preview": "vite preview",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "type-check": "tsc --noEmit",
    "firebase:init": "firebase init hosting",
    "firebase:deploy": "npm run build && firebase deploy",
    "firebase:serve": "firebase serve",
    "deploy": "npm run build && firebase deploy --only hosting",
    "deploy:gh-pages": "npm run build && gh-pages -d dist"
  },
  "dependencies": {
    "@google/generative-ai": "^0.24.1",
    "@heroicons/react": "^2.2.0",
    "@supabase/supabase-js": "^2.58.0",
    "clsx": "^2.1.1",
    "embla-carousel-autoplay": "^8.6.0",
    "embla-carousel-react": "^8.6.0",
    "postgres": "^3.4.7",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-markdown": "^9.1.0",
    "react-router-dom": "^6.23.1",
    "remark-gfm": "^4.0.1",
    "tailwind-merge": "^3.3.1"
  },
  "devDependencies": {
    "@types/node": "^22.14.0",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@typescript-eslint/eslint-plugin": "^8.15.0",
    "@typescript-eslint/parser": "^8.15.0",
    "@vitejs/plugin-react": "^4.7.0",
    "autoprefixer": "^10.4.21",
    "eslint": "^9.15.0",
    "eslint-plugin-react-hooks": "^5.0.0",
    "eslint-plugin-react-refresh": "^0.4.14",
    "firebase-tools": "^13.0.0",
    "gh-pages": "^6.3.0",
    "postcss": "^8.5.6",
    "sharp": "^0.34.5",
    "tailwindcss": "^3.4.17",
    "typescript": "^5.6.2",
    "vite": "^6.0.1"
  }
}
