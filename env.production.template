# Production Environment Variables for Otakon AI
# These will be used by Firebase Functions and Cloud Run

# Google Cloud Project
GOOGLE_CLOUD_PROJECT=otakon-production
GCLOUD_PROJECT=otakon-production

# Supabase Configuration (will be overridden by Secret Manager in production)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_KEY=your-service-key-here
SUPABASE_ANON_KEY=your-anon-key-here

# Gemini API Configuration
GEMINI_API_KEY=your-gemini-api-key-here

# Backend Configuration
NODE_ENV=production
PORT=8080
API_BASE_URL=https://otakon-backend-xyz-uc.a.run.app

# Frontend Configuration (for build process)
VITE_SUPABASE_URL=https://your-project.supabase.co
VITE_SUPABASE_PUBLISHABLE_DEFAULT_KEY=your-anon-key-here
VITE_GEMINI_API_KEY=your-gemini-api-key-here
VITE_API_BASE_URL=https://otakon-backend-xyz-uc.a.run.app

# Security
CORS_ORIGIN=https://otakon-production.web.app,https://otakon-production.firebaseapp.com

# Monitoring
ENABLE_LOGGING=true
LOG_LEVEL=info
